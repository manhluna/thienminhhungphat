<!doctype html>
<html class="no-js" lang="">
<head>
    <%- include("modular/headTag") -%>

    <link rel="stylesheet" href="Wizard/fonts/material-design-iconic-font/css/material-design-iconic-font.css">
    <link rel="stylesheet" href="Wizard/vendor/date-picker/css/datepicker.min.css">
    <link rel="stylesheet" href="Wizard/css/style.css">

    <link rel="stylesheet" href="tab/assets/css/lib/datatable/dataTables.bootstrap.min.css">
</head>

<body>
    <%- include("modular/leftAdmin") -%>

    <div id="right-panel" class="right-panel">
        <%- include("modular/headerAdmin") -%>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Thêm Sản Phẩm</strong>
                            </div>

                            <div style="margin: 18px 18px 18px 18px;">

                                <div class="form-row">
                                    <div class="form-holder w-100">
                                        <i class="fa fa-hashtag" aria-hidden="true"></i>
                                        <input type="text" class="form-control" id="code" placeholder="Mã sản phẩm">
                                    </div>
                                </div>
    
                                <div class="form-row">
                                    <div class="form-holder w-100">
                                        <i class="fa fa-cube" aria-hidden="true"></i>
                                        <input type="text" class="form-control" id="name" placeholder="Tên sản phẩm">
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-holder w-100">
                                        <i class="fa fa-picture-o"></i>
                                        <input type="text" class="form-control" id="img" placeholder="Ảnh hiển thị">
                                    </div>
                                </div>
    
                                <div class="form-row">
                                    <div class="form-holder w-100">
                                        <i class="fa fa-usd" aria-hidden="true"></i>
                                        <input type="text" class="form-control" id="unit" placeholder="Đơn giá">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>    

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Hành Động</strong>
                            </div>
                            
                                <button id="add-product" class="btn btn-success" style="margin: 80px 30px 30px 30px;">
                                    <i class="fa fa-upload" aria-hidden="true"></i>
                                </button>
    
                                <button id="remove-product" class="btn btn-danger" style="margin: 0px 30px 98px 30px;">
                                    <i class="fa fa-window-close" aria-hidden="true"></i>
                                </button>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Danh Sách Sản Phẩm</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Mã sản phẩm</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Ảnh hiển thị</th>
                                            <th>Đơn giá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach((item) => { %>
                                            <tr>
                                                <td><%= item.code %></td>
                                                <td><%= item.name %></td>
                                                <td><img class="img-thumbnail" style="width:120px;height:120px;" src="<%= item.img %>"/></td>
                                                <td><%= item.unit %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <%- include("modular/scriptTag") -%>

    <script src="tab/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="tab/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="tab/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="tab/assets/js/lib/data-table/jszip.min.js"></script>
    <script src="tab/assets/js/lib/data-table/vfs_fonts.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.print.min.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="tab/assets/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function() {
          $('#bootstrap-data-table-export').DataTable();
      } );
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/socket.js"></script>
</body>
</html>