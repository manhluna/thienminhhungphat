<!doctype html>
<html class="no-js" lang="">
<head>
    <%- include("modular/headTag") -%>
    <link rel="stylesheet" href="tab/assets/css/lib/datatable/dataTables.bootstrap.min.css">
</head>

<body>
    <%- include("modular/leftAdmin") -%>

    <div id="right-panel" class="right-panel">
        <%- include("modular/headerAdmin") -%>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row" id="status">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Danh Sách Đơn Hàng</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Mã Đơn Hàng</th>
                                            <th>Tổng Tiền</th>
                                            <th>Người Nhận</th>
                                            <th>Số Điện Thoại</th>
                                            <th>Nội Dung CK</th>
                                            <th>Trạng Thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% history.forEach((item) => { %>
                                            <tr id="<%= item.id %>">
                                                <td><%= item.id %></td>
                                                <td id="total_<%= item.id %>"><%= item.total %></td>
                                                <td><%= item.attach.nguoinhan %></td>
                                                <td><%= item.attach.sodienthoai %></td>
                                                <td><%= item.commentPay %></td>
                                                <td align="center">
                                                    <button class="btn btn-primary" id="phone_<%= item.id %>"><i class="fa fa-volume-control-phone" aria-hidden="true"></i></i></button>
                                                    <button class="btn btn-warning" id="car_<%= item.id %>"><i class="fa fa-car" aria-hidden="true"></i></button>
                                                    <button class="btn btn-success" id="check_<%= item.id %>"><i class="fa fa-check" aria-hidden="true"></i></button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Danh Sách Rút Tiền</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-sys" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Người Rút</th>
                                            <th>Số Tiền</th>
                                            <th>Ngân Hàng</th>
                                            <th>Chủ Tài Khoản</th>
                                            <th>Số Tài Khoản</th>
                                            <th>Ngày Tạo</th>
                                            <th>Check</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bank.forEach((item) => { %>
                                            <tr id="ruttien_<%= item.st %>">
                                                <td><%= item.id %></td>
                                                <td><%= item.amount %></td>
                                                <td><%= item.bank +' '+ item.branch %></td>
                                                <td><%= item.owner %></td>
                                                <td><%= item.account %></td>
                                                <td><%= item.created %></td>
                                                <td align="center">
                                                    <button class="btn btn-success" id="guitien_<%= item.st %>"><i class="fa fa-check" aria-hidden="true"></i></button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>

    <%- include("modular/scriptTag") -%>



    <script src="tab/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="tab/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="tab/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
    <script src="tab/assets/js/lib/data-table/jszip.min.js"></script>
    <script src="tab/assets/js/lib/data-table/vfs_fonts.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.print.min.js"></script>
    <script src="tab/assets/js/lib/data-table/buttons.colVis.min.js"></script>
    <script src="tab/assets/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function() {
          $('#bootstrap-data-table-export').DataTable();
      } );
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/socket.js"></script>
</body>
</html>